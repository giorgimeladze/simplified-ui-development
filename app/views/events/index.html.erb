<h1>Event Store Events</h1>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>Event Type</th>
      <th>Created At</th>
      <th>Changes</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event[:event_type] %></td>
        <td>
          <% if event[:created_at] %>
            <%= Time.parse(event[:created_at]).strftime("%Y-%m-%d %H:%M:%S") %>
          <% end %>
        </td>
        <td>
          <pre class="mb-0"><%= JSON.pretty_generate(event[:data]) %></pre>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
