<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= @section_name %> Customizations</h1>
        <div>
          <%= link_to 'Edit', send("edit_#{@section_name.downcase}_custom_template_path"), class: 'btn btn-primary' %>
          <%= link_to 'Back to All', custom_template_path, class: 'btn btn-secondary' %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5>Current Customizations</h5>
        </div>
        <div class="card-body">
          <p class="text-muted">Your custom button titles and styles for <%= @section_name %> actions are applied throughout the application.</p>
          
          <div class="row">
            <% @section_data.each do |action_name, customization| %>
              <div class="col-md-6 mb-3">
                <div class="card">
                  <div class="card-body">
                    <h6 class="card-title"><%= action_name.humanize %></h6>
                    <p class="card-text mb-2">
                      <strong>Title:</strong> "<%= customization['title'] %>"
                    </p>
                    <p class="card-text mb-2">
                      <strong>Classes:</strong> "<%= customization['button_classes'] %>"
                    </p>
                    <div class="preview mt-2">
                      <small class="text-muted">Preview:</small><br>
                      <button type="button" class="<%= customization['button_classes'] %>">
                        <%= customization['title'] %>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-footer">
          <%= button_to "Reset to Defaults", send("reset_#{@section_name.downcase}_custom_template_path"), 
              method: :post, 
              class: 'btn btn-warning', 
              data: { confirm: "Are you sure you want to reset all #{@section_name.downcase} customizations?" } %>
        </div>
      </div>
    </div>
  </div>
</div>
