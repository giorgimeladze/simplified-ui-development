<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Custom Template Dashboard</h1>
        <div>
          <%= link_to 'Edit All', edit_custom_template_path, class: 'btn btn-primary' %>
          <%= link_to 'Reset All to Defaults', reset_custom_template_path, method: :post, 
                      class: 'btn btn-warning', 
                      data: { confirm: 'Are you sure you want to reset all customizations?' } %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5>Task-Based Customization Sections</h5>
          <p class="mb-0 text-muted">Click on a section to view or customize its button titles and styles.</p>
        </div>
        <div class="card-body">
          <div class="row">
            <% %w[Article Comment Navigation Article2 Comment2].each do |section| %>
              <div class="col-md-4 mb-4">
                <div class="card h-100">
                  <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><%= section %> Customizations</h6>
                  </div>
                  <div class="card-body">
                    <p class="card-text">
                      <% action_count = @custom_template.template_data[section]&.count || 0 %>
                      <%= pluralize(action_count, 'action') %> available
                    </p>
                  </div>
                  <div class="card-footer bg-transparent">
                    <%= link_to 'View', send("show_#{section.downcase}_custom_template_path"), class: 'btn btn-sm btn-outline-primary' %>
                    <%= link_to 'Edit', send("edit_#{section.downcase}_custom_template_path"), class: 'btn btn-sm btn-primary' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
