<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Custom Template</h1>
        <div>
          <%= link_to 'Edit Template', edit_custom_template_path, class: 'btn btn-primary' %>
          <%= link_to 'Reset to Defaults', reset_custom_template_path, method: :post, 
                      class: 'btn btn-warning', 
                      data: { confirm: 'Are you sure you want to reset all customizations?' } %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5>Current Customizations</h5>
        </div>
        <div class="card-body">
          <p class="text-muted">Your custom button titles and styles are applied throughout the application.</p>
          
          <div class="row">
            <% @custom_template.template_data.each do |model_name, actions| %>
              <div class="col-md-4 mb-4">
                <h6 class="text-primary"><%= model_name %></h6>
                <ul class="list-group list-group-flush">
                  <% actions.each do |action_name, customization| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <strong><%= action_name.humanize %></strong>
                        <br>
                        <small class="text-muted">
                          Title: "<%= customization['title'] %>"<br>
                          Classes: "<%= customization['button_classes'] %>"
                        </small>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
