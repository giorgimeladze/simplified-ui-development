<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Custom Template</h1>
        <%= link_to 'Back to Template', custom_template_path, class: 'btn btn-secondary' %>
      </div>

      <%= form_with model: @custom_template, local: true do |form| %>
        <div class="card">
          <div class="card-header">
            <h5>Customize Button Titles and Styles</h5>
            <p class="mb-0 text-muted">Modify how buttons appear throughout the application for your personal view.</p>
          </div>
          <div class="card-body">
            <% @custom_template.template_data.each do |model_name, actions| %>
              <div class="mb-4">
                <h6 class="text-primary border-bottom pb-2"><%= model_name %></h6>
                <div class="row">
                  <% actions.each do |action_name, customization| %>
                    <div class="col-md-6 mb-3">
                      <div class="card">
                        <div class="card-body">
                          <h6 class="card-title"><%= action_name.humanize %></h6>
                          
                          <div class="mb-2">
                            <label class="form-label">Button Title</label>
                            <input type="text" 
                                   class="form-control" 
                                   name="custom_template[template_data][<%= model_name %>][<%= action_name %>][title]"
                                   value="<%= customization['title'] %>"
                                   placeholder="Enter custom title">
                          </div>
                          
                          <div class="mb-2">
                            <label class="form-label">Button Classes</label>
                            <input type="text" 
                                   class="form-control" 
                                   name="custom_template[template_data][<%= model_name %>][<%= action_name %>][button_classes]"
                                   value="<%= customization['button_classes'] %>"
                                   placeholder="Enter CSS classes">
                            <small class="form-text text-muted">e.g., btn btn-primary btn-sm</small>
                          </div>
                          
                          <div class="preview">
                            <small class="text-muted">Preview:</small>
                            <button type="button" class="<%= customization['button_classes'] %>">
                              <%= customization['title'] %>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer">
            <%= form.submit 'Update Template', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', custom_template_path, class: 'btn btn-secondary ms-2' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Live preview of button changes
  document.addEventListener('DOMContentLoaded', function() {
    const inputs = document.querySelectorAll('input[type="text"]');
    inputs.forEach(input => {
      input.addEventListener('input', function() {
        const preview = this.closest('.card-body').querySelector('.preview button');
        if (this.name.includes('title')) {
          preview.textContent = this.value;
        } else if (this.name.includes('button_classes')) {
          preview.className = this.value;
        }
      });
    });
  });
</script>
