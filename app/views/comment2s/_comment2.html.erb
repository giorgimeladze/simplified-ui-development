<div class="card comment2 mb-2" id="comment2-<%= comment2[:id]%>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <p class="card-text mb-0"><%= comment2[:text] %></p>
      <%= state_badge(comment2[:state], 'comment2') %>
    </div>
    
    <%# Show rejection feedback if available and user is admin or comment author %>
    <% if comment2[:rejection_feedback].present?%>
      <div class="alert alert-warning mt-3">
        <h6><strong>Rejection Feedback:</strong></h6>
        <p class="mb-0"><%= comment2[:rejection_feedback] %></p>
      </div>
    <% end %>
    
    <div class="mt-3">
      <%= render_links(comment2[:links]) %>
    </div>
  </div>
</div>
