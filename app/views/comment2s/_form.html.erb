<%= form_with(
      model: comment2,
      url: comment2.persisted? ? comment2_path(comment2) : article2_comment2s_path(@article2),
      method: comment2.persisted? ? :patch : :post,
      local: true,
      class: 'needs-validation'
    ) do |form| %>
  <div class="mb-3">
    <%= form.label :text, class: 'form-label' %>
    <%= form.text_field :text, class: 'form-control', placeholder: 'Enter comment text' %>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit 'Save Comment2', class: 'btn btn-primary' %>
  </div>
<% end %>
