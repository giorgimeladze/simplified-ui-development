<%= form_with url: reject_article2_path(@article2), method: :post, local: true do |form| %>
  <div class="mb-3">
    <label for="rejection_feedback" class="form-label">Rejection Feedback</label>
    <%= form.text_area :rejection_feedback, 
        class: "form-control", 
        id: "rejection_feedback", 
        rows: 6, 
        placeholder: "Please provide detailed feedback on why this article2 is being rejected...",
        required: true %>
    <div class="form-text">This feedback will be visible to the article2 author and help them improve their submission.</div>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to "Cancel", article2_path(@article2), class: "btn btn-secondary" %>
    <% title, button_classes = model_link("Article2", :reject, current_user) %>
    <%= form.submit title, class: button_classes %>
  </div>
<% end %>
