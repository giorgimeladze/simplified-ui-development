<%= form_with url: reject_comment_path(@comment), method: :post, local: true do |form| %>
  <div class="mb-3">
    <label for="rejection_feedback" class="form-label">Rejection Feedback</label>
    <%= form.text_area :rejection_feedback, 
        class: "form-control", 
        id: "rejection_feedback", 
        rows: 6, 
        placeholder: "Please provide detailed feedback on why this comment is being rejected...",
        required: true %>
    <div class="form-text">This feedback will be visible to the comment author and help them understand the rejection.</div>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to "Cancel", article_path(@comment.article), class: "btn btn-secondary" %>
    <%= form.submit "Reject Comment", class: "btn btn-danger" %>
  </div>
<% end %>
