<div class="card comment mb-2" id="comment-<%= comment[:id]%>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <p class="card-text mb-0"><%= comment[:text] %></p>
      <%= status_badge(comment[:status], 'comment') %>
    </div>
    <div class="mt-3">
      <%= render_links(comment[:links]) %>
    </div>
  </div>
</div>
